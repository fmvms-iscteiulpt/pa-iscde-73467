<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension-point id="taskextension" name="Task Extension" schema="schema/taskextension.exsd"/>
   <extension
         id="helloview"
         name="Tasks"
         point="pt.iscte.pidesco.view">
      <view
            class="pa.iscde.tasklist.internal.TaskListView"
            icon="task.png">
      </view>
   </extension>
   <extension
         point="pt.iscte.tasklist.taskextension">
      <tasktag
            tagdescription="Fix fast"
            tagname="URGENT">
      </tasktag>
      <tasktag
            tagdescription="This is important code"
            tagname="IMPORTANT">
      </tasktag>
      <tasktag
            tagdescription="Needs to be refactored"
            tagname="CLEAN">
      </tasktag>
      <tasktag
            tagdescription="Tasks to do"
            tagname="TODO">
      </tasktag>
      <tasktag
            tagdescription="Fix this code"
            tagname="FIXME">
      </tasktag>
      <tasktag
            tagdescription="Needs attention"
            tagname="XXX">
      </tasktag>
   </extension>

</plugin>
